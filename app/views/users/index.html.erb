<h1>Listing users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
		<% if user.account_frozen %>
		  <td>account frozen</td>
		<% else %>
		  <td></td>
		<% end %>      
		</tr>
    <% end %>
  </tbody>
</table>

